<Window x:Class="Task_1__Triangle_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_1__Triangle_"
        mc:Ignorable="d"
        Title="Треугольник" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Grid.Row="1" Height="100" Width="300" FontFamily="Segoe UI Black" FontSize="24" Click="Button_Click">Input</Button>
        <Button Grid.Column="1" Grid.Row="1" Height="100" Width="300" FontFamily="Segoe UI Black" FontSize="24" Click="Button_Click_1">Exit</Button>
    </Grid>
</Window>
